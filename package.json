    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "express-graphql": "^0.9.0",
    "express-jwt": "^6.0.0",
    "express-jwt-authz": "^2.4.0",
    "graphql": "^15.1.0",
    "graphql-compose": "^7.18.1",
    "graphql-compose-mongoose": "^7.4.0",
    "jwks-rsa": "^1.8.1",
    "mongodb": "^3.5.9",
    "mongoose": "^5.9.20",
